{
  "compilerOptions": {
    "module": "commonjs",                     // Mantém o uso do CommonJS
    "target": "ES2021",                        // Alvo mais recente do ECMAScript
    "declaration": true,                       // Gera arquivos de declaração .d.ts
    "esModuleInterop": true,
    "removeComments": true,                    // Remove comentários no código compilado
    "emitDecoratorMetadata": true,             // Necessário para decorators do NestJS
    "experimentalDecorators": true,            // Ativa decorators experimentais
    "allowSyntheticDefaultImports": true,      // Permite importações padrão de módulos CommonJS
    "sourceMap": true,                         // Gera mapas de origem para depuração
    "outDir": "./dist",                        // Diretório de saída para arquivos compilados
    "baseUrl": "./",                           // Base para resolução de módulos
    "paths": {
      "src/*": ["src/*"]                       // Permite o uso de aliases de caminho
    },
    "incremental": true,                       // Habilita builds incrementais
    "skipLibCheck": true,                      // Ignora a verificação de tipos nas bibliotecas
    "strictBindCallApply": true,               // Garante que bind, call e apply são seguros
    // "forceConsistentCasingInFileNames": true,  // Garante consistência de maiúsculas/minúsculas nos nomes dos arquivos
    "noFallthroughCasesInSwitch": true         // Garante que não haja casos de fallthrough em switches
  },
  "include": ["src/**/*"],
}
